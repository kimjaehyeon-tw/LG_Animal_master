<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.lg_animal">

    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activity.LoginActivity"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.JoinActivity" />
        <activity android:name=".activity.CameraActivity"/>
        <activity android:name=".activity.SettingMainActivity"
            android:theme="@style/noActionbar"/>
        <activity android:name=".activity.RoutineSettingActivity"
            android:theme="@style/noActionbar"/>
        <activity android:name=".activity.PetRegisterActivity"
            android:theme="@style/noActionbar"/>
        <activity android:name=".activity.PetManagerActivity"
            android:theme="@style/noActionbar"/>

        <provider
            android:name="androidx.core.content.FileProvider"
            android:authorities="com.example.lg_animal"
            android:exported="false"
            android:grantUriPermissions="true">

            <meta-data
                android:name="android.support.FILE_PROVIDER_PATHS"
                android:resource="@xml/pet_img_camera" />
        </provider>
    </application>

</manifest>